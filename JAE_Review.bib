@article{Sahade2015,
  title = {Climate Change and Glacier Retreat Drive Shifts in an {{Antarctic}} Benthic Ecosystem},
  author = {Sahade, Ricardo and Lagger, Cristian and Torre, Luciana and Momo, Fernando and Monien, Patrick and Schloss, Irene and Barnes, David K A and Servetto, Natalia and Tarantelli, Soledad and Tati{\'a}n, Marcos and Zamboni, Nadia and Abele, Doris},

  shorttitle = {Pelagic Swarms and Beach Strandings of the Squat Lobster {{Munida}} Gregaria ({{Anomura}}},
  author = {Diez, Mariano J. and {P{\'e}rez-Barros}, Patricia and Carolina Romero, M. and Scioscia, Gabriela and Tapella, Federico and Cabreira, Ariel G. and Madirolas, Adri{\'a}n and Raya Rey, Andrea and Lovrich, Gustavo A.},

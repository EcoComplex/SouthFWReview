@article{Duffy2007,
  title = {The Functional Role of Biodiversity in Ecosystems: Incorporating Trophic Complexity},
  shorttitle = {The Functional Role of Biodiversity in Ecosystems},
  author = {Duffy, J. Emmett and Cardinale, Bradley J. and France, Kristin E. and McIntyre, Peter B. and Th{\'e}bault, Elisa and Loreau, Michel},
  year = {2007},
  journal = {Ecology Letters},
  volume = {10},
  number = {6},

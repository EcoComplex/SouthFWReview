@article{Hernandez2019,
  title = {Changes in Salinity and Temperature Drive Marine Bacterial Communities' Structure at {{Potter Cove}}, {{Antarctica}}},
  author = {Hern{\'a}ndez, Edgardo A. and Lopez, Jos{\'e} L. and Piquet, Anouk M.-T. and Mac Cormack, Walter P. and Buma, Anita G. J.},
  year = {2019},
  month = dec,
  journal = {Polar Biology},

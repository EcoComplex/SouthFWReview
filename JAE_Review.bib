}

@article{Hill2012,
  title = {A Foodweb Model to Explore Uncertainties in the {{South Georgia}} Shelf Pelagic Ecosystem},
  author = {Hill, Simeon L. and Keeble, Kathryn and Atkinson, Angus and Murphy, Eugene J.},
  year = {2012},
  month = jan,
  journal = {Deep Sea Research Part II: Topical Studies in Oceanography},
  series = {{{DISCOVERY}} 2010: {{Spatial}} and {{Temporal Variability}} in a {{Dynamic Polar Ecosystem}}},
  volume = {59--60},

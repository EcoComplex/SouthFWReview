@article{Menge1995,
  title = {Indirect {{Effects}} in {{Marine Rocky Intertidal Interaction Webs}}: {{Patterns}} and {{Importance}}},
  shorttitle = {Indirect {{Effects}} in {{Marine Rocky Intertidal Interaction Webs}}},
  author = {Menge, Bruce A.},
  year = {1995},
  journal = {Ecological Monographs},
  volume = {65},

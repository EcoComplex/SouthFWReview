@article{Ferreira2021,
  title = {Endocrine Disruption in the Sub {{Antarctic}} Fish {{Patagonotothen}} Tessellata ({{Perciformes}}, {{Notothenidae}}) from {{Beagle Channel}} Associated to Anthropogenic Impact},
  author = {Ferreira, Maria Florencia and Lo Nostro, Fabiana L. and Fern{\'a}ndez, Daniel A. and Genovese, Griselda},

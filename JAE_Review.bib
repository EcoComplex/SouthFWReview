  keywords = {diet,ecosystem,krill,Notothenioidei,predators}
}

@article{Barrera-Oro2019,
  title = {The Importance of Macroalgae and Associated Amphipods in the Selective Benthic Feeding of Sister Rockcod Species {{Notothenia}} Rossii and {{N}}. Coriiceps ({{Nototheniidae}}) in {{West Antarctica}}},

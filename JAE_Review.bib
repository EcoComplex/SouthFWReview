@article{Deppeler2020,
  title = {Ocean Acidification Reduces Growth and Grazing Impact of {{Antarctic}} Heterotrophic Nanoflagellates},
  author = {Deppeler, Stacy and Schulz, Kai G. and Hancock, Alyce and Pascoe, Penelope and McKinlay, John and Davidson, Andrew},

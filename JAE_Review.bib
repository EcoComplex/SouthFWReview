}

@article{Turschwell2022,
  title = {Interactive Effects of Multiple Stressors Vary with Consumer Interactions, Stressor Dynamics and Magnitude},
  author = {Turschwell, Mischa P. and Connolly, Sean R. and Sch{\"a}fer, Ralf B. and De Laender, Frederik and Campbell, Max D. and {Mantyka-Pringle}, Chrystal and Jackson, Michelle C. and Kattwinkel, Mira and Sievers, Michael and Ashauer, Roman and C{\^o}t{\'e}, Isabelle M. and Connolly, Rod M. and {van den Brink}, Paul J. and Brown, Christopher J.},

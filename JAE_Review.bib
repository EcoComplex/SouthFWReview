  author = {Olivier, Pierre and Frelat, Romain and Bonsdorff, Erik and Kortsch, Susanne and Kr{\"o}ncke, Ingrid and M{\"o}llmann, Christian and Neumann, Hermann and Sell, Anne F. and Nordstr{\"o}m, Marie C.},
  year = {2019},
  journal = {Ecography},

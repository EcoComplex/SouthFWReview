  author = {Paparazzo, Flavio E. and Pierattini Martinez, Regina and Fabro, Elena and Gon{\c c}alves, Rodrigo J. and {Crespi-Abril}, Augusto C. and Soria, Gaspar R. and Barbieri, Elena A. and Almandoz, Gast{\'o}n O.},

@article{Hoffmann2019,
  title = {Implications of {{Glacial Melt-Related Processes}} on the {{Potential Primary Production}} of a {{Microphytobenthic Community}} in {{Potter Cove}} ({{Antarctica}})},
  author = {Hoffmann, Ralf and {Al-Handal}, Adil Yousif and Wulff, Angela and Deregibus, Dolores and Zacher, Katharina and Quartino, Mar{\'i}a Liliana and Wenzh{\"o}fer, Frank and Braeckman, Ulrike},
  year = {2019},

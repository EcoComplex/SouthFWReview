@article{Lau2018,
  title = {The Reproductive Ecology of the {{Antarctic}} Bivalve {{Aequiyoldia}} Eightsii ({{Protobranchia}}: {{Sareptidae}}) Follows Neither {{Antarctic}} nor Taxonomic Patterns},
  shorttitle = {The Reproductive Ecology of the {{Antarctic}} Bivalve {{Aequiyoldia}} Eightsii ({{Protobranchia}}},
  author = {Lau, Sally C. Y. and Grange, Laura J. and Peck, Lloyd S. and Reed, Adam J.},

@article{Trebilco2020,
  title = {The Policy Relevance of {{Southern Ocean}} Food Web Structure: {{Implications}} of Food Web Change for Fisheries, Conservation and Carbon Sequestration},
  shorttitle = {The Policy Relevance of {{Southern Ocean}} Food Web Structure},
  author = {Trebilco, Rowan and {Melbourne-Thomas}, Jess and Constable, Andrew John},

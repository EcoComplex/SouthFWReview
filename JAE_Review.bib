  author = {Bauer, Barbara and Berti, Emilio and Ryser, Remo and Gauzens, Benoit and Hirt, Myriam R. and Rosenbaum, Benjamin and Digel, Christoph and Ott, David and Scheu, Stefan and Brose, Ulrich},
  year = {2022},

@article{Latorre2023,
  title = {Summer Heatwaves Affect Coastal {{Antarctic}} Plankton Metabolism and Community Structure},
  author = {Latorre, M.P. and Iachetti, C.M. and Schloss, I.R. and Antoni, J. and Malits, A. and De La Rosa, F. and De Troch, M. and Garcia, M.D. and {Flores-Melo}, X. and Romero, S.I. and Gil, M.N. and Hernando, M.},
  year = {2023},

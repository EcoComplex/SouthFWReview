@article{Soeffker2022,
  title = {Contrasting Life-History Traits of Two Toothfish ({{Dissostichus}} Spp.) Species at Their Range Edge around the {{South Sandwich Islands}}},
  author = {Soeffker, Marta and Hollyman, Philip R. and Collins, Martin A. and Hogg, Oliver T. and Riley, Ainsley and Laptikhovsky, Vladimir and Earl, Timothy and Roberts, Jim and MacLeod, Eleanor and Belchier, Mark and Darby, Chris},
